<p id="notice"><%= notice %></p>

<%= form_for :status_token_validation, url: game_status_path do |f| %>

  <p>
    <%= f.label "Player" %>
    <%= f.select(:player, ['one', 'two'])%>
  </p>
  <p>
    <%= f.label "Player Token" %>
    <%= f.text_field :player_token %>
  </p>
  <p>
    <%= f.submit "Get Status" %>
  </p>
<% end %>

