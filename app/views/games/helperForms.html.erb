<%= form_for :check_moves, url: game_check_moves_path do |f| %>

  <p>
    <%= f.label "Player" %>
    <%= f.select(:player, ['one', 'two'])%>
  </p>
  <p>
    <%= f.label "Player Token" %>
    <%= f.text_field :player_token %>
  </p>
  <p style="display: inline-block;">
    <%= f.label "Piece (row - 1..8)(column - 1..8)" %>
  	<div style="display: inline-block;">
    	<%= f.text_field :row %>
    </div>
    <div style="display: inline-block;">
    	<%= f.text_field :col %>
    </div>
  </p>
  <p>
    <%= f.submit "Check allowed moves" %>
  </p>
<% end %>

